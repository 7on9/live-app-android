<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="io.hypertrack.meta.view.UserProfile">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ImageButton
        android:id="@+id/user_profile.image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_xhigh"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:padding="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/default_profile_pic" />

    <TextView
        android:id="@+id/user_profile.edit_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="onEditAccountClick"
        android:padding="@dimen/margin_high"
        android:text="Edit Account"
        android:textAllCaps="true"
        android:textColor="@color/text_highlight"
        android:textSize="@dimen/text_base" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_high"
        android:layout_marginTop="@dimen/margin_xxhigh"
        android:fontFamily="sans-serif-medium"
        android:text="Favorite Addresses"
        android:textColor="@color/text_base"
        android:textSize="@dimen/text_medium" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/user_profile.saved_places"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_high" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingBottom="@dimen/padding_high"
        android:paddingRight="@dimen/padding_high"
        android:paddingTop="@dimen/padding_high">

        <ImageView
            android:id="@+id/user_profile.add_place_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_high"
            android:src="@drawable/destination_marker" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_max"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_profile.add_place_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add a new place"
                android:textColor="@color/text_base"
                android:textSize="@dimen/text_base" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
