<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.Home"
    tools:showIn="@layout/activity_home">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.Home" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_base"
                android:layout_marginLeft="@dimen/margin_high"
                android:layout_marginRight="@dimen/margin_high"
                android:layout_marginTop="@dimen/margin_high"
                android:background="@android:color/white"
                android:elevation="@dimen/elevation_high"
                app:cardCornerRadius="2dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/enter_destination_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/destination_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_xhigh"
                            android:layout_marginRight="@dimen/margin_high"
                            android:background="@null"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:hint="@string/autocomplete_hint"
                            android:padding="16dp"
                            android:singleLine="true"
                            android:textColor="@color/text_base"
                            android:textSize="@dimen/text_base" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="@dimen/padding_medium"
                            android:paddingRight="@dimen/padding_medium"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_destination" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/autocomplete_places_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">

                        <AutoCompleteTextView
                            android:id="@+id/autocomplete_places"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_xhigh"
                            android:layout_marginRight="@dimen/margin_high"
                            android:background="@null"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:hint="@string/autocomplete_hint"
                            android:padding="16dp"
                            android:singleLine="true"
                            android:textColor="@color/text_base"
                            android:textSize="@dimen/text_base" />

                        <ImageView
                            android:id="@+id/autocomplete_places_back_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:onClick="onEnterDestinationBackClick"
                            android:paddingLeft="@dimen/padding_medium"
                            android:paddingRight="@dimen/padding_medium"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_navigation_arrow_back" />
                    </FrameLayout>
                </FrameLayout>

            </android.support.v7.widget.CardView>

            <ProgressBar
                android:id="@+id/login_progress"
                style="?android:attr/progressBarStyle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="@dimen/margin_high"
                android:layout_marginTop="@dimen/margin_low"
                android:indeterminate="true"
                android:visibility="gone"
                tools:visibility="visible" />
        </FrameLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/autocomplete_places_results_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_high"
            android:layout_marginLeft="@dimen/margin_high"
            android:layout_marginRight="@dimen/margin_high"
            android:layout_marginTop="@dimen/margin_base"
            android:visibility="gone">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/autocomplete_places_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>
