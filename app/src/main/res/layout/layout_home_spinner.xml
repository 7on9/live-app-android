<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/padding_low"
    android:paddingBottom="@dimen/padding_low"
    android:layout_gravity="center"
    android:gravity="center"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/spinner.selected_account_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_home"
        android:tint="#8E8E8E" />

    <TextView
        android:id="@+id/spinner.selected_account_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_medium"
        android:paddingRight="@dimen/padding_medium"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/text_medium" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/padding_high"
        android:src="@drawable/ic_navigation_arrow_drop_down"
        android:tint="#8E8E8E" />
</LinearLayout>