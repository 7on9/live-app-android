<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/appBackground"
    tools:showIn="@layout/activity_verify" tools:context=".view.Verify">


    <TextView
        android:id="@+id/verify_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verify_phone_number_hearder_note"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:layout_marginStart="@dimen/margin_high"
        android:layout_marginLeft="@dimen/margin_high"
        android:layout_marginRight="@dimen/margin_high"
        android:layout_marginEnd="@dimen/margin_high"
        android:layout_marginBottom="20dp" />

    <EditText
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:paddingLeft="@dimen/padding_high"
        android:paddingRight="@dimen/padding_high"
        android:layout_marginTop="@dimen/margin_xxhigh"
        android:gravity="center"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/verificationCode"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/verify_header_text"
        android:visibility="visible"
        android:focusable="true"
        android:focusableInTouchMode="true" />
    
    <LinearLayout
        android:id="@+id/verfication_code_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/first_code"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/theme"
                android:layout_centerInParent="true"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_extra_large"
                android:gravity="center"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/second_code"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/theme"
                android:layout_centerInParent="true"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_extra_large"
                android:gravity="center"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/third_code"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/theme"
                android:layout_centerInParent="true"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_extra_large"
                android:gravity="center"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/fourth_code"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/theme"
                android:layout_centerInParent="true"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_extra_large"
                android:gravity="center"/>

        </RelativeLayout>
        
    </LinearLayout>

    <Button
        android:id="@+id/btn_resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/verfication_code_view"
        android:layout_marginTop="@dimen/margin_high"
        android:background="@null"
        android:textColor="@color/colorAccent"
        android:text="Resend"
        />
</RelativeLayout>
