<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/colorBackground"
    tools:showIn="@layout/activity_verify" tools:context=".view.Verify">

    <TextView
        android:id="@+id/verify_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verify_phone_number_hearder_note"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_high"
        android:layout_marginStart="@dimen/margin_high"
        android:layout_marginLeft="@dimen/margin_high"
        android:layout_marginRight="@dimen/margin_high"
        android:layout_marginEnd="@dimen/margin_high"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_high"
        android:paddingRight="@dimen/padding_high"
        android:layout_marginTop="@dimen/margin_xxhigh"
        android:gravity="center"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/verificationCode"
        android:hint="Verification Code"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/verify_header_text"
        />
</RelativeLayout>
