<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_business_profile.name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:padding="@dimen/padding_high"
        android:background="@android:color/white"
        android:singleLine="true"
        android:text="Add Business Profile"
        android:textColor="@color/text_base"
        android:textSize="@dimen/text_medium" />

    <ImageView
        android:id="@+id/item_business_profile.action_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/padding_base"
        android:background="@android:color/white"
        android:src="@drawable/ic_action_add"/>
</LinearLayout>